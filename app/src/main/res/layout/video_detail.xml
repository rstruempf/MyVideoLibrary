<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">

    <TextView
        android:id="@+id/video_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="Location:"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/video_location"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:layout_alignTop="@+id/video_location_label"
        android:layout_toEndOf="@+id/video_location_label"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/video_rating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_below="@id/video_location_label"
        android:layout_alignLeft="@id/video_location_label" android:layout_alignStart="@id/video_location_label"
        android:text="Rating:"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/video_rating"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:layout_below="@id/video_location"
        android:layout_alignLeft="@id/video_location" android:layout_alignStart="@id/video_location"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/video_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="Description:"
        android:layout_below="@+id/video_rating_label"
        android:layout_alignStart="@+id/video_rating_label"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/video_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="25dp" android:paddingEnd="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:layout_below="@+id/video_description_label"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/video_imdb_url_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_below="@id/video_description"
        android:layout_alignLeft="@id/video_description_label" android:layout_alignStart="@id/video_description_label"
        android:text="IMDb URL:"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/video_imdb_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp" android:paddingEnd="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:autoLink="web"
        android:textColorLink="#0000FF"
        android:layout_below="@id/video_imdb_url_label"
        android:layout_marginTop="10dp" />

</RelativeLayout>